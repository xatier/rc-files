[alias]
	amend = commit --amend
	br = branch
	ci = commit -v
	co = checkout
	dc = diff --cached
	df = diff
	gist = !xdg-open https://gist.github.com
	github = !xdg-open `git rev-parse 2>/dev/null && \
                        git config --get remote.origin.url | \
                        sed -e 's/:/\\//' -e 's/git@/https:\\/\\//' || \
                        echo "https://github.com/xatier?tab=repositories"`
	hub = !git github
	l = log
	last = log -1 HEAD
	lg = log --all --graph --pretty='%C(yellow)%h%C(reset)%C(bold yellow)%d%C(reset)%C(green) %an%C(reset)%C(dim white) (%ar)%C(reset) %n        %s%n'
	lm = log master
	lp = log -p
	ls = ls-files
	m = merge
	show-graph = log --all --graph --oneline --decorate
	stash-unapply = !git stash show -p | git apply -R
	st = status
	unstage = reset HEAD --
[color]
	ui = auto
[commit]
	gpgSign = true
[core]
	excludesfile = ~/.gitignore
	pager = less -x1,5
	preloadindex = yes
[diff]
	# algorithm = patience
	algorithm = histogram
[help]
	autocorrect = 30
[merge]
	tool = vimdiff
[push]
	default = simple
[status]
	showUntrackedFiles = all
[url "git@github.com:"]
	insteadOf = https://github.com/
[user]
	email = xatierlike@gmail.com
	name = xatier
	signingkey = EE2C5C1F7D756A33

{
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "dev.containers.dockerPath": "podman",
    "diffEditor.codeLens": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "docker.dockerPath": "podman",
    "docsYaml.telemetry.enableTelemetry": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "line",
    "editor.find.autoFindInSelection": "always",
    "editor.fontFamily": "Inconsolata,'Gen Jyuu Gothic Monospace','monospace', monospace",
    "editor.fontSize": 16,
    "editor.guides.bracketPairs": true,
    "editor.inlineSuggest.enabled": true,
    "editor.lineNumbers": "on",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        79,
        119
    ],
    "editor.suggest.localityBonus": true,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.wordBasedSuggestionsMode": "allDocuments",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "extensions.ignoreRecommendations": true,
    "files.exclude": {
        "**/*.o": true,
        "**/*.so*": true,
        "**/*.pyc": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": true,
        "markdown": false
    },
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "prettier.semi": false,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.logLevel": "Warning",
    "python.analysis.typeCheckingMode": "strict",
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style",
        "{dedent_closing_brackets: true, split_before_logical_operator: false, split_complex_comprehension: true}"
    ],
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--ignore C408,D1",
        "--import-order-style=google"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.mypyArgs": [
        "--follow-imports=silent",
        "--ignore-missing-imports",
        "--no-strict-optional",
        "--show-column-numbers"
    ],
    "python.linting.mypyEnabled": true,
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "redhat.telemetry.enabled": false,
    "search.collapseResults": "alwaysExpand",
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "telemetry.telemetryLevel": "off",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "vim.foldfix": true,
    "vim.gdefault": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.vimrc.enable": true,
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vsicons.dontShowNewVersionMessage": true,
    "vsintellicode.features.python.deepLearning": "enabled",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "window.zoomLevel": 3,
    "workbench.colorTheme": "GitHub Dark",
    "workbench.editor.decorations.badges": true,
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.titleScrollbarSizing": "large",
    "workbench.editor.wrapTabs": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.iconTheme": "vscode-icons",
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
        "editor.formatOnType": true,
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    }
}
